# ============================================================
# Elevator Tracking System - 環境変数設定
# ============================================================

# ============================================================
# データベース設定
# ============================================================
# MySQLユーザー名
DB_DRIVER=mysql+aiomysql
DB_USER=your_username
# MySQLパスワード
DB_PASSWORD=your_password
# MySQLホストアドレス
DB_HOST=localhost
DB_PORT=3306
# MySQL データベース名
# DB_NAME=elevator_db
DB_NAME=elevator_db_test
DATABASE_URL=${DB_DRIVER}://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# ============================================================
# MQTT ブローカー設定
# ============================================================
MQTT_HOST=broker.hivemq.com
# MQTTブローカーのポート番号
MQTT_PORT=1883
# エレベーター状態データの配信トピック
MQTT_TOPIC=elevator/status 
# データフォーマット文字列
FORMAT_STR=<Hbbb 